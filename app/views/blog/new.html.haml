.contents.row
  = form_for(@blog, url:{controller:"blog",action:"create"}) do |f|
    %div#fm{:style => "margin: 8px 0"}
      = f.text_area :title, placeholder: 'タイトル', style: 'width:300px;height: 25px;'
    %div#fm{:style => "margin: 8px 0"}
      = f.text_area :blog, placeholder: '内容', style: 'width: 300px;height: 300px;'
      %div#subm
        = button_tag type: "submit", class: "submit" do
          投稿する
